<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59CC5E"
    android:backgroundTint="#00FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="141dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/garden" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="322dp"
        android:layout_height="142dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/garden" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="108dp"
        android:layout_height="0dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr3" />

            <ImageView
                android:id="@+id/Millets"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr31" />

            <ImageView
                android:id="@+id/jute"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr32" />

            <ImageView
                android:id="@+id/tea"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr33" />

            <ImageView
                android:id="@+id/rubber"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr34" />

            <ImageView
                android:id="@+id/coffee"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr35" />

            <ImageView
                android:id="@+id/wheat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr37" />

            <ImageView
                android:id="@+id/cotton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr38" />

            <ImageView
                android:id="@+id/rice"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rr39" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/sellproduct"
        android:layout_width="152dp"
        android:layout_height="0dp"

        android:backgroundTint="#4FC654"
        android:text="Sell product"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scrollView2" />


    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="403dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/sellproduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/scrollView2" />

    <ImageView
        android:id="@+id/pestiside"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toStartOf="@+id/fertilizer"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fertilizer" />

    <ImageView
        android:id="@+id/fertilizer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pestiside" />


</androidx.constraintlayout.widget.ConstraintLayout>